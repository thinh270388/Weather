<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Weather.Mobile"
             xmlns:converters="clr-namespace:Weather.Mobile.Converters"
             x:Class="Weather.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="PrimaryColor1">#030282</Color>
            <Color x:Key="PrimaryColor2">#020297</Color>
            
            <converters:CodeToLocalConverters x:Key="CodeToLocalConverters"/>
            <converters:CodeToTourismConverters x:Key="CodeToTourismConverters"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
